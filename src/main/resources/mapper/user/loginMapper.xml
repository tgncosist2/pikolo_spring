<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pikolo.pikolo.mapper.user.LoginDAO">
<select id="selectUserLogin" resultType="com.pikolo.pikolo.dto.user.UserInfoDTO" parameterType="com.pikolo.pikolo.dto.user.LoginRequestDTO">
    SELECT * FROM USERS_ACCOUNT
    WHERE USER_EMAIL = #{userEmail}
</select>
<update id="updateUserLoginDate" parameterType="java.util.Map">
    UPDATE USERS_ACCOUNT
    SET LAST_LOGIN_IP = #{clientIp}, LAST_LOGIN_DATE = SYSTIMESTAMP
    WHERE USER_EMAIL = #{userEmail}
</update>
</mapper>