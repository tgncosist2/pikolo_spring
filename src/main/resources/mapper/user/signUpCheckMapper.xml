<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pikolo.pikolo.mapper.user.SignUpCheckDAO">
<select id="selectNicknameCheck" resultType="int" parameterType="String">
    SELECT COUNT(*) CNT FROM USERS_ACCOUNT
    WHERE USER_NICKNAME = #{userNickname}
</select>
<select id="selectEmailCheck" resultType="int" parameterType="String">
    SELECT COUNT(*) CNT FROM USERS_ACCOUNT
    WHERE USER_EMAIL = #{userEmail}
</select>
</mapper>